{% import "_includes/forms" as forms %}

{% includeCssResource "chatra/css/Chatra_Style.css" %}
{% includeJsResource "chatra/js/Chatra_Script.js" %}

{{ forms.textField({
    label: 'Public API key',
    instructions: 'Get your public API key from [the control panel](https://app.chatra.io/settings/general?enroll=&partnerId=eM2oGJzP3nzFXc4ua)',
    id: 'publicApiKey',
    name: 'publicApiKey',
    value: settings['publicApiKey']}) }}

{{ forms.textField({
    label: 'Secret API key',
    instructions: 'Get your Chatra User ID from [the control panel](https://app.chatra.io/settings/general?enroll=&partnerId=eM2oGJzP3nzFXc4ua)',
    id: 'secretApiKey',
    name: 'secretApiKey',
    value: settings['secretApiKey']}) }}

{{ forms.editableTableField({
    label: 'Agents',
    instructions: 'Get your Chatra Agent IDs from [the control panel](https://app.chatra.io/settings/agents?enroll=&partnerId=eM2oGJzP3nzFXc4ua)',
    id:     'agents',
    name:   'agents',
    cols: [
        { 'heading' : 'Agent name', type: 'singleline' },
        { 'heading' : 'Agent ID', type: 'singleline' },
    ],
    rows: settings['agents']}) }}

